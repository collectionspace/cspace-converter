<div class="row">

  <%= render partial: 'shared/sidebar' %>

  <div class="col-md-10">
    <%= render partial: 'shared/alerts' %>
    <%= render partial: 'shared/title', :locals => { :title => object.identifier, :type => object.type, :subtype => object.subtype } %>

    <div class="row">
      <div class="col-md-8">
        <dl class="dl-horizontal metadata">
          <dt class="col-sm-3">Title</dt>
          <dd class="col-sm-9"><%= object.title || "untitled" %></dd>

          <dt class="col-sm-3">CSID</dt>
          <dd class="col-sm-9"><%= object.csid || "n/a" %></dd>

          <dt class="col-sm-3">URI</dt>
          <dd class="col-sm-9"><%= object.uri || "n/a" %></dd>

          <dt class="col-sm-3">Converter</dt>
          <dd class="col-sm-9"><%= object.converter %></dd>

          <dt class="col-sm-3">Fingerprint</dt>
          <dd class="col-sm-9"><%= object.fingerprint || "n/a" %></dd>

          <dt class="col-sm-3">Parent</dt>
          <dd class="col-sm-9"><%= object_label(object.data_object) %> <%= link_to "View", object_path(object.data_object) %></dd>
        </dl>
      </div>

      <div class="col-md-4">
        <p class="text-muted">External actions</p>
        <%= button_to 'Ping', { action: 'ping', category: object.category }, form_class: 'external', class: 'btn btn-info' %>
        <%= button_to 'Transfer', { action: 'transfer', category: object.category }, form_class: 'external', class: 'btn btn-warning' %>
        <%= button_to 'Update', { action: 'update', category: object.category }, form_class: 'external', class: 'btn btn-warning' %>
        <%= button_to 'Delete', { action: 'delete', category: object.category }, form_class: 'external', class: 'btn btn-danger' %>
      </div>
    </div>

    <% if object.transfer_statuses && object.transfer_statuses.any? %>
      <%= render partial: 'shared/transfer_status',
          :locals => { :transfer_statuses => transfer_statuses_for(object) }
      %>
    <% end %>

    <div class="row">
      <div class="col-md-12">
        <p class="text-muted">Document</p>
        <pre class="prettyprint lang-xml"><%= object.content %></pre>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <p>Return to <%= link_to title, send("#{type}_path".to_sym) %></p>
      </div>
    </div>

  </div>

</div>
